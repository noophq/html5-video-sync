{
  "name": "html5-video-sync",
  "version": "0.9.0-beta.1",
  "description": "Synchronise multiple videos from a main video",
  "main": "index.js",
  "scripts": {
    "test": "jest --verbose",
    "lint:ts": "tslint './src/**/*.ts' './src/**/*.tsx'",
    "lint:editorconfig": "eclint check '**/*' '!.*/**/*' '!test/app/**/*' '!test/resources/**/*' '!node_modules/**/*' '!dist/**/*'",
    "lint": "npm run lint:editorconfig && npm run lint:ts",
    "build": "cross-env NODE_ENV=production webpack --display-modules",
    "start:dev": "webpack-dev-server --hot --inline",
    "start": "live-server --open=test/app"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "debug": "^3.1.0",
    "raf": "^3.4.0"
  },
  "devDependencies": {
    "@types/jest": "^21.1.2",
    "@types/node": "^8.0.33",
    "@types/xmldom": "^0.1.29",
    "awesome-typescript-loader": "^3.2.3",
    "cross-env": "^5.0.5",
    "eclint": "^2.4.3",
    "jest": "^21.2.1",
    "live-server": "^1.2.0",
    "shaka-player": "^2.2.2",
    "source-map-loader": "^0.2.2",
    "ts-jest": "^21.1.1",
    "tslint": "^5.7.0",
    "typescript": "^2.5.3",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.9.1"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "skipBabel": true,
        "tsConfigFile": "test/tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleNameMapper": {
      "^lib(.*)$": "<rootDir>/src/$1"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
